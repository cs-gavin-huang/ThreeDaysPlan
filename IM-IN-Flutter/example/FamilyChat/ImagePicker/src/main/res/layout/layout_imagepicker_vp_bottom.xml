<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_imagepicker_bottomview"
                android:background="#60000000">

    <FrameLayout
        android:id="@+id/ck_imagepicker_vp_bottom"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_imagepicker_vp_bottom_choose"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="@string/tv_imagepicker_vp_bottom_choose"
                android:textColor="@android:color/white"
                android:textSize="16sp"/>
        </LinearLayout>
    </FrameLayout>


    <Button
        android:id="@+id/btn_imagepicker_vp_bottom_ok"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:background="@drawable/btn_imagepicker_ok_bg_selector"
        android:enabled="false"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="@string/btn_imagepicker_ok"
        android:textColor="@drawable/btn_imagepicker_ok_tv_selector"
        android:textSize="15sp"/>
</RelativeLayout>